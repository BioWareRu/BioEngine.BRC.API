@model BioEngine.BRC.Common.Web.Models.BlockViewModel<BioEngine.BRC.Common.Entities.Blocks.PictureBlock, BioEngine.BRC.Common.Entities.Blocks.PictureBlockData>


@{
    var image = Model.Block.Data.Picture;
    var url = !string.IsNullOrEmpty(Model.Block.Data.Url) ? Model.Block.Data.Url : image.PublicUri.ToString();
    var imgUrl = image.PictureInfo?.LargeThumbnail?.PublicUri ?? image.PublicUri;
}
<p style="text-align: center">
    <a href="@url" target="_blank">
        <img src="@imgUrl" alt="@image.FileName"/>
    </a>
</p>
