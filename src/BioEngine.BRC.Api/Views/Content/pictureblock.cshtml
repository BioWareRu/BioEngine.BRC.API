@using BioEngine.BRC.Common
@using BioEngine.BRC.Common.Extensions
@using Sitko.Core.Storage
@model BioEngine.BRC.Common.Web.Models.BlockViewModel<BioEngine.BRC.Common.Entities.Blocks.PictureBlock, BioEngine.BRC.Common.Entities.Blocks.PictureBlockData>
@inject IStorage<BRCStorageConfig> Storage

@{
    var image = Model.Block.Data.Picture;
    var url = !string.IsNullOrEmpty(Model.Block.Data.Url) ? Model.Block.Data.Url : Storage.PublicUri(image).ToString();
    var imgUrl = Storage.LargeThumbnailUri(image);
}
<p style="text-align: center">
    <a href="@url" target="_blank">
        <img src="@imgUrl" alt="@image.FileName"/>
    </a>
</p>
