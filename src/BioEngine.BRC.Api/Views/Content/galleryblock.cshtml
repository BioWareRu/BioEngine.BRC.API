@using BioEngine.BRC.Common
@using BioEngine.BRC.Common.Extensions
@using Sitko.Core.Storage
@model BioEngine.BRC.Common.Web.Models.BlockViewModel<BioEngine.BRC.Common.Entities.Blocks.GalleryBlock, BioEngine.BRC.Common.Entities.Blocks.GalleryBlockData>
@inject IStorage<BRCStorageConfig> Storage
<p style="text-align: center">
    @foreach (var picture in Model.Block.Data.Pictures)
    {
        var linkUri = Storage.PublicUri(picture);
        var imgUri = Storage.MediumThumbnailUri(picture);
        <a class="ipsAttachLink ipsAttachLink_image" href="@linkUri" data-ipslightbox="" data-ipslightbox-group="@Model.Block.Id">
            <img class="ipsImage ipsImage_thumbnailed" data-fileid="@picture.Id" src="@imgUri" alt="@picture.FileName"/>
        </a>
    }
</p>
